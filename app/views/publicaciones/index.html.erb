                    </div>
                  <% end %>
                  <p class="comentarios">
                    <span >Comentarios: <%= publicacion.comments.count %></span>
                  </p>
                <% end %>
                <!-- MOSTRAR REACCIONES DESTACADAS -->   
                <% destacadas = publicacion.reactions.group(:reaction_type).count.sort_by { |_, v| -v }.first(3) %>
